!!!
%html
  %head
    %title ChatSpace
  %body
    .chat
      .chat_header
        グループを作成しました
      .chat__side
        .chat__side__header
          .chat__side__header__name
            test-user
          .chat__side__header__icon
            %a.i.fa.fa-pencil-square-o(href="#" class="icon")
            %a.i.fa.fa-cog(href="#" class="icon")
        .chat__side__main
          = render partial: 'side_main'

      .chat__main
        .chat__main__header
          .chat__main__header__group__name
            test-group
          .chat__main__header__member__name
            Members: test-user
          .chat__main__header__edit
            Edit
        .chat__main__message
          = render partial: 'main_message_contents'

        .chat__main__footer
          %input(type="text" value="type a message")
          %label.file
            %i.fa.fa-picture-o(class="icon")
            %input(type="file")
          %input(type="button" value="Send")


